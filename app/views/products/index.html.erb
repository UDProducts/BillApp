<% if @products.count > 0 %>

<%= form_tag products_path, :method => 'get', :id => "products_search_form", :class => "search_box" do %>


<div class="row-fluid">
  <div class="span4">
    <%= text_field_tag :search, params[:search], :placeholder => "Royal Search", :id => "products_search_box", :class => "search_field" %>
  </div>
  <div class="span6 pull-right">
    <div class="btn-group pull-right" data-toggle="buttons-radio"> 
      <%= link_to raw('<i class="icon-th-large"></i>'), products_path, :class=>"btn", :remote => true, :rel => "tooltip", :data => { :original_title => "Show All" }%>
      <%= link_to "Today", products_path(:from_date => (Time.zone.today - 1), :to_date => Time.zone.today), :class => "btn", :remote => true %> 
      <%= link_to "Yesterday", products_path(:from_date => (Time.zone.today - 2), :to_date => Time.zone.today - 1), :class => "btn", :remote => true %> 
      <%= link_to "Week", products_path(:from_date => (Time.zone.today.at_beginning_of_week), :to_date => Time.zone.today.at_end_of_week), :class => "btn", :remote => true %> 
      <%= link_to "Month", products_path(:from_date => (Time.zone.today.at_beginning_of_month), :to_date => Time.zone.today.at_end_of_month), :class => "btn", :remote => true %> 
    </div>
  </div>
  <div class="span2 last">
    <%= link_to raw('<i class="icon-plus-sign icon-white"></i> New Product'), new_product_path , :class => "btn btn-primary pull-right" %>
  </div>
 <% end %>
</div>
<div id="products_result"><%= render 'products' %></div>

<br />

<% else %>

  <div class="empty_area">
    <%= image_tag "empty.jpg" %>
    <span class="empty_message">
      This place seems to be empty.. go to new and add something
    </span>
  </div>
<% end %>


