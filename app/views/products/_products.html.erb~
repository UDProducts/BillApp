<script type="text/javascript" charset="utf-8">
  $(function () {
    
    new Highcharts.Chart({
      chart: { renderTo: 'quantity_chart',type:'bar' },
    title: { text: 'Quantities by Day' },
    xAxis: { categories: [<% @products.each do |product| %><%= product.name %>.to_s, <% end %>] },
     yAxis: {
         title: {
            text: 'Fruit eaten'
         }
      },
      series: [{
         name: 'Anne',
         data: [1, 0, 4]
      }, {
         name: 'Martin',
         data: [5, 7, 3]
      }]
   });
  });
</script>


<div id="quantity_chart" style="width:560px;height:300px;" onload="function" ></div>
<table class="table table-striped">
  <tr>
    
    <th>Code</th>
    <th>Name</th>
    <th></th>
    <th>Dimensions</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @products.each do |product| %>
  <tr>
    
    <td><%= product.code %></td>
    <td><%= product.name %></td>
    <td></td>
    <td><%= product.size1 %></td>
    <td><%= product.size2 %></td>
    <td><%= link_to 'Show', product %></td>
    <td><%= link_to 'Edit', edit_product_path(product) %></td>
    <td><%= link_to 'Destroy', product, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>
<%= paginate @products %>
