<%= form_for @customer, :html => { :class => 'well form-inline'} do |f| %>
  <% if @customer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@customer.errors.count, "error") %> prohibited this customer from being saved:</h2>

      <ul>
      <% @customer.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="customer_inputs">
    
    <%= f.text_field :name, :placeholder => " Name", :class => "input-small" %>
    <%= f.text_field :address, :placeholder => " Address" %>
    <%= f.text_field :phoneno, :placeholder => " Phone", :class => "input-small" %> 
    <%= f.text_field :email, :placeholder => " Email", :class => "input-small" %>
  </div>
  </br></br>  </br></br>
<div class="actions">
<%= link_to 'Back', products_path, :class => "btn info" %>
<%= f.submit 'Create', :class => "btn-primary" %>
</div>
<% end %>

