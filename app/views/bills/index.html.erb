
<% if @bills.count > 0 %>

<%= form_tag bills_path, :method => 'get', :id => "bills_search_form", :class => "search_box" do %>
        
 <%= text_field_tag :search, params[:search], :placeholder => "Royal Search", :id => "bills_search_box", :class => "search_field" %><%= link_to 'New Bill', new_bill_path , :class => "btn btn-primary pull-right" %>
 <% end %>
<br />
<div id="bills_result"><%= render 'bills' %></div>

<% else %>

  <div class="empty_area">
    <%= image_tag "empty.jpg" %>
    <span class="empty_message">
      This place seems to be empty.. go to new and add something
    </span>
  </div>
<% end %>


