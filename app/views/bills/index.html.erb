
<% if @bills.count > 0 %>

<%= link_to "Today Bills", bills_path(:from_date => (Time.zone.today - 1), :to_date => Time.zone.today)%> 
<%= link_to "All", bills_path %>
<%= form_tag bills_path, :method => 'get', :id => "bills_search_form", :class => "search_box" do %>


<div class="row-fluid">
  <div class="span4">
    <%= text_field_tag :search, params[:search], :placeholder => "Royal Search", :id => "bills_search_box", :class => "search_field" %>
  </div>
  <div class="span6 pull-right">
    <div class="btn-group pull-right" data-toggle="buttons-radio"> 
      <%= link_to "All", bills_path, :class=>"btn", :remote => true %>
      <%= link_to "Today", bills_path(:from_date => (Time.zone.today - 1), :to_date => Time.zone.today), :class => "btn", :remote => true %> 
      <%= link_to "Yesterday", bills_path(:from_date => (Time.zone.today - 2), :to_date => Time.zone.today - 1), :class => "btn", :remote => true %> 
      <%= link_to "Week", bills_path(:from_date => (Time.zone.today.at_beginning_of_week), :to_date => Time.zone.today.at_end_of_week), :class => "btn", :remote => true %> 
      <%= link_to "Month", bills_path(:from_date => (Time.zone.today.at_beginning_of_month), :to_date => Time.zone.today.at_end_of_month), :class => "btn", :remote => true %> 
    </div>
  </div>
  <div class="span2 last">
    <%= link_to 'New Bill', new_bill_path , :class => "btn btn-primary pull-right" %>
  </div>
 <% end %>
</div>
<div id="bills_result"><%= render 'bills' %></div>

<% else %>

  <div class="empty_area">
    <%= image_tag "empty.jpg" %>
    <span class="empty_message">
      This place seems to be empty.. go to new and add something
    </span>
  </div>
<% end %>


