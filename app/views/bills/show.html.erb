<body class="span"><center><%= form_for @bill , :html => { :class => 'well form-inline',:id =>'showbill'} do |f|  %>
<div class="wholepage">
  <p class="hide print">
    <h4 class="hide print" id="store_name">Royal Woods</h2>
  </p>

  <p class="hide print">
    <h6 class="hide print" id="stor_address"> No. 32/6, M.T.H. Road, Thirumullaivoyal, <br />Chennai - 600 062 </h4>
  </p>

  <p class="hide print">
    <span class="hide print" id="store_contacts">Phone: 9840132810, 9840336783<br /><br /></span> 
  </p>

  <p class="hide print">
    <span class="hide print" id="bill_type">Memo/Quotation<br /></span>
  </p>

  <p>
   
  <span id="billdate"><b><%= @bill.created_at.strftime("%a, %d %b %Y") %></b></span>
  
  <span id="showcode"><b>Code: <%= @bill.code %></b></span>
  
  <span id="customername"><b><%= @bill.customer_name %></b></span>
  <br />
  </p>
  <table class="table table-striped table-bordered table-condensed " id="bill_table">
  <thead id="bill_headings">
    <tr>
      <th>Product Code</th>
      <th>Product Name-Size </th>
      <th>Length</th>
      <th>No</th>
      <th>CFT</th>
      <th>Amount</th>
    </tr>
  </thead>
  <tbody >
<% @total_qty=0 %>
    <% @bill.items.each do |item| %>
    <tr>
      <td class="bill_body"><%= item.product.code %></td>
      <td class="bill_body"><%= item.product.name %></td>
      <td class="bill_body"><%= item.length %></td>
      <td class="bill_body"><%= item.sold_qty %></td>
      <td class="bill_body"><%= item.cft %></td>
      <td class="bill_body"><%= item.total_amount.to_f %></td>
    </tr>
        
       <% 
        @total_qty+= item.sold_qty %>
    <% end %>

  </tbody>
  </table>
 
</br></br>
<div class="bill_final_inputs">
 
  <b id="gross">Gross:
    <%= @bill.gross %></b>
  <b id="vat">Vat:
  <%= @bill.vatamt %></b>

  </br>
  <b id="cft">Tot.cft:
   <%= @bill.total_cft %></b>
   </br>
  <b id="sft">Tot.sft:
   <%= @bill.total_sqft %></b>
  </br>
  <b id="ft">Tot.ft:
   <%= @bill.total_ft %></b>

  
  
  
  <b id="tot">Tot:
    <%= @bill.amount %></b>

  </br>
   <b id="planecharge">P.Chrg:
   <%= @bill.planecharge %></b>
  </br>
   <b id="discount">Less:
  <%= @bill.discount %></b>
   </br>
  <b id="cusdues">O/Bal.:
  <%= @bill.customer_dues %> </b>
  

  </br></br>

  <b id="totalquantity">Tot.Nos:
   <%= @total_qty %></b>
  
 
  
  <b id="net">Net:
    <%= @bill.net %></b>

</br>   

  <b id="advance">Advance:
  <%= @bill.advance %></b>

  <b id="balance">Balance:
    <%= @bill.balance %></b>

  

  

  </div>

 <div class="dontprint pull-right">
    
    <%= link_to raw('<i class="icon-print icon-white"></i> Print'), "#", :class => "btn btn-info dontprint pull-right", :onload => "window.print()" %> 
    <%= submit_tag "Save", :class => "btn dontprint" %>  
 </div>

</div>
<% end %>
  <span class="hide print" id="thankyou"><center>Thank You!<br/>Visit Again!!</center></span>
</center></body>
