<center><%= form_for @bill , :html => { :class => 'well form-inline',:id =>'showbill'} do |f|  %>
  <p class="hide print">
    <h2 class="hide print" id="store_name">Royal Woods</h2>
  </p>

  <p class="hide print">
    <h4 class="hide print" id="stor_address"> No. 32/6, M.T.H. Road, Thirumullaivoyal, <br />Chennai - 600 062 </h4>
  </p>

  <p class="hide print">
    <span class="hide print" id="store_contacts">Phone: 9840132810, 9840336783<br /><br /></span> 
  </p>

  <p class="hide print">
    <span class="hide print" id="bill_type">Memo/Quotation<br /></span>
  </p>

  <p>
   
  <span id="billdate"><b><%= @bill.created_at.strftime("%a, %d %b %Y") %></b></span>
  
  <span id="showcode"><b>Code: <%= @bill.code %></b></span>
  
  <span id="customername"><b><%= @bill.customer_name %></b></span>
  <br />
  </p>
  <table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>Code</th>
      <th>Product</th>
      <th>Size</th>
      <th>Length</th>
      <th>Rate</th>
      <th>Amount</th>
    </tr>
  </thead>
  <tbody>

    <% @bill.items.each do |item| %>
    <tr>
      <td><%= item.product.code %></td>
      <td><%= item.product.name %></td>
      <td><%= item.product.size %></td>
      <td><%= item.length %></td>
      <td><%= item.rate %></td>
      <td><%= item.length.to_i * item.rate.to_i %></td>
    </tr>
    <% end %>

  </tbody>
  </table>

</br></br>
<div class="bill_final_inputs">
   
  <div class="total_amount">
  <b id="amount">Total Amount:
  <%= @bill.amount %></b>
  </br>
  </br>
  <b id="vat">Vat:
  <%=@bill.vat %></b>
   </br>
   </br>
  <b id="advance">Advance:
  <%= @bill.advance %></b>
  </br>
  </br>

  <b id="advance">Balance:
    <%= @bill.balance %></b>

  </div>

 <div class="dontprint pull-right">
    
    <%= link_to raw('<i class="icon-print icon-white"></i> Print'), "#", :class => "btn btn-info dontprint pull-right", :onClick => "window.print()" %> 
    <%= submit_tag "Save", :class => "btn dontprint" %>  
 </div>


<% end %>
  <span class="hide print" id="thankyou">Thank You!<br/>Visit Again!!</span>
</center>
