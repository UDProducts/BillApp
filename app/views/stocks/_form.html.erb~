      <% @stock.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div align="center" class="cust_inputs">

      <%= f.autocomplete_field :product_code, autocomplete_product_code_products_path, :placeholder => "Type code here", :update_elements => { :name => "#product_name", :size => "#product_size", :category => "#product_metric"+rand_number }, :class => "input-small" %> 
 
  <%= f.text_field :product_name, :placeholder => "Product Name", :class => "input-small item_product_name", :id => "product_name", :readonly => "true" %>
  <%= f.text_field :product_size,  :placeholder => "Size", :class => "input-small", :id => "product_size", :readonly => "true" %>

     <%= f.text_field :quantity, :placeholder => "Stock Qty", :class => "input-small" %>
 

    <%= f.number_field :cost, :placeholder => "Cost", :class => "input-small" %>
  </div>
</br></br></br></br>
  <%= link_to 'Back', stocks_path, :class => "btn info" %>
